<%= form_for @transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :debit_account_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:transaction, :debit_account_id, accounts, :id, :name, {:prompt => false}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :credit_account_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:transaction, :credit_account_id, accounts, :id, :name, {:prompt => false}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transactions_path, :class => 'btn' %>
  </div>
<% end %>
